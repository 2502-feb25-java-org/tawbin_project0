<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERS</display-name>
  <welcome-file-list>
    <welcome-file>/Partials/Login.html</welcome-file>
  </welcome-file-list>
  <servlet>
	<servlet-name>LogInServlet</servlet-name>
	<servlet-class>com.revature.servlet.LogInServlet</servlet-class> 
	<!-- SERLVET CONFIG
		parameter(s) applied to a particular servlet -->
	<init-param>
		<param-name>login config</param-name>
		<param-value>Servlet config</param-value>
	</init-param>	
	<load-on-startup>1</load-on-startup>
 </servlet>
 <servlet-mapping>
 	<servlet-name>LogInServlet</servlet-name>
 	<url-pattern>/login</url-pattern>
 </servlet-mapping>
</web-app>